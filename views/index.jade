block content
  .navbar.navbar-default
    .container-fluid.navbarCon
      .navbar-header
        h1.pageHeader Rando eCorp
      a(href="http://localhost:3000/admin")
        button.admin Admin
  .container.form
    .row
      form
        .col-lg-3.apply
          h2.applyh2 Apply
          .form-group.title
            label First Name:
            input#fName(type="text" name="fName" class="form-control"  placeholder="Enter First Name")
          .form-group
            label Last Name:
            input#lName(type="text" name="lName" class="form-control"  placeholder="Enter Last Name")
          .form-group
            label Desired Job:
            input#dJob(type="text" name="dJob" class="form-control"  placeholder="Enter Desired Job")
