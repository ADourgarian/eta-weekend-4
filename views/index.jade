              label City:
              input#dCity(type="text" name="dCity" class="form-control"  placeholder="Enter City")
              label State:
              input#dState(type="text" name="dState" class="form-control"  placeholder="Enter State")
        .col-lg-9
          h2 Employment History
          .historyBox
            .form-group
              label Job Title:
              input#title(type="text" name="title" class="form-control"  placeholder="Enter Job Title")
            .form-group
              label Employer:
